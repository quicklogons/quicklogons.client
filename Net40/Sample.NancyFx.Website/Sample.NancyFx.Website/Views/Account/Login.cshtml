@using Sample.NancyFx.Website.Core
@inherits Nancy.ViewEngines.Razor.NancyRazorViewBase<Sample.NancyFx.Website.Models.Account.AccountLoginModel>
@{ Layout = Model.Layout; }

<h2 class="page-header">@Model.Title</h2>

<div class="row">
    @foreach (var link in Model.LoginLinks)
    {
        <div class="col-lg-2 col-md-3 col-sm-4 col-xs-6 text-center">
            <a class="btn btn-default" href="@link.Url">@link.ProviderName</a>
            <br /><br />
        </div>
    }
</div>
