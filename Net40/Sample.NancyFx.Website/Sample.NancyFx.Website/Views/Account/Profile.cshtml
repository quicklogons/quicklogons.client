@using Sample.NancyFx.Website.Core
@inherits Nancy.ViewEngines.Razor.NancyRazorViewBase<Sample.NancyFx.Website.Models.Account.AccountProfileModel>
@{ Layout = Model.Layout; }

<h2>@Model.Title</h2>

<div class="form-horizontal panel panel-default">
    <div class="panel-body">
        <div class="form-group">
            <label class="col-sm-1 control-label">Login</label>
            <div class="col-sm-10">
                <p class="form-control-static">@Model.UserLogin</p>
            </div>
        </div>
        <div class="form-group">
            <label class="col-sm-1 control-label">Name</label>
            <div class="col-sm-10">
                <p class="form-control-static">@Model.UserName</p>
            </div>
        </div>
        <div class="form-group">
            <label class="col-sm-1 control-label">Email</label>
            <div class="col-sm-10">
                <p class="form-control-static">@Model.UserEmail</p>
            </div>
        </div>
    </div>
</div>
